{
  "name": "<%= name %>",
  "description": "<%- description %>",
  "version": "1.0.0",
  "author": "<%- author %> <<%- email %>>",
  "bugs": {
    "url": "<%- githubRepo %>/issues",
    "email": "<%- email %>"
  },
  "contributors": ["<%- author %> <<%- email %>>"],
  "dependencies": {},
  "devDependencies": {
    <% if (test !== 'none') { %>
      "<%- test -%>": "*",
    <% } %>
    <% if (coverage) { %>
      "codecov": "*",
      "nyc": "*",
    <% } %>
    "standard": "*"
  },
  "homepage": "<%- githubRepo %>",
  "keywords": [ <%- `${keywords.trim().split(/[, ]+/).map(k => `"${k.trim()}"`).join(', ')}` %> ],
  "license": "MIT",
  "main": "index.js",
  <% if (coverage) { %>
    "nyc": {
      "reporter": ["lcov", "html", "text"]
    },
  <% } %>
  "repository": {
    "type": "git",
    "url": "<%- githubRepo %>"
  },
  "scripts": {
    <% if (coverage) { %>
      "test-coverage": "nyc <%- test -%>",
      "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
      "test": "npm run lint && npm run test-coverage",
    <% } else if (test !== 'none') { %>
      "test": "npm run lint && <%- test -%>",
    <% } %>
    "lint": "standard"
  }
}
