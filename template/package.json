{
  "name": "<%= name %>",
  "description": "<%- description %>",
  "version": "1.0.0",
  "author": "<%- author %> <<%- email %>>",
  "bugs": {
    "url": "<%- githubRepo %>/issues",
    "email": "<%- email %>"
  },
  "contributors": ["<%- author %> <<%- email %>>"],
  "dependencies": {},
  "devDependencies": {
    <% if (test !== 'none') { %>
      "<%- test -%>": "*",
    <% } %>
    "prettier": "*",
    "pretty-quick": "*",
    "husky": "*",
    "eslint": "*"
  },
  "homepage": "<%- githubRepo %>",
  "keywords": [ <%- `${keywords.trim().split(/[, ]+/).map(k => `"${k.trim()}"`).join(', ')}` %> ],
  "license": "MIT",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "repository": {
    "type": "git",
    "url": "<%- githubRepo %>"
  },
  "scripts": {
    <% if (test !== 'none') { %>
      "test": "npm run lint && <%- test -%>"
    <% } %>
    "lint": "eslint --ext .js .",
    "lint-fix": "eslint --fix --ext .js ."
  }
}
